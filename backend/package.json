{
  "name": "it2810-p4-backend",
  "version": "1.0.0",
  "description": "A server backend for it2810 project 4",
  "main": "src/server.js",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "babel --presets @babel/env src -d build",
    "start": "npm run build && node build/server.js",
    "fix": "eslint --fix src/*",
    "db:seed": "cp ../database.db ../database2.db && python3 ../db.reset.py",
    "db:runtest": "echo test and stuff",
    "db:revert": "rm ../database.db && mv ../database2.db ../database.db",
    "db:test": "npm run db:seed && npm run db:runtest && npm run db:revert"
  },
  "keywords": [
    "graphql",
    "express",
    "node",
    "it2810"
  ],
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "indent": [
        "error",
        4
      ],
      "no-console": 0,
      "no-var": "error",
      "curly": "error",
      "no-multi-spaces": "error",
      "array-bracket-spacing": "error",
      "brace-style": "error",
      "camelcase": "error",
      "comma-spacing": [
        "error",
        {
          "before": false,
          "after": true
        }
      ],
      "comma-style": [
        "error",
        "last"
      ],
      "func-call-spacing": [
        "error",
        "never"
      ],
      "keyword-spacing": "error",
      "no-multiple-empty-lines": "error",
      "no-trailing-spaces": "error",
      "quotes": [
        "error",
        "single"
      ],
      "semi-style": [
        "error",
        "last"
      ],
      "space-in-parens": [
        "error",
        "always"
      ],
      "prefer-const": "error",
      "quote-props": "error",
      "space-before-blocks": "error",
      "space-infix-ops": "error",
      "newline-per-chained-call": "error",
      "semi": [
        "error",
        "always"
      ],
      "no-unreachable": "error",
      "no-unused-vars": "warn",
      "no-mixed-spaces-and-tabs": 0
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.5.2",
    "cors": "^2.8.4",
    "express": "^4.16.4",
    "express-graphql": "^0.6.12",
    "graphql": "^14.0.2",
    "graphql-tester": "0.0.5",
    "sqlite": "^3.0.0",
    "sqlite3": "^4.0.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "babel-core": "^7.0.0-bridge.0",
    "@babel/preset-env": "^7.1.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.7.0",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0"
  }
}
